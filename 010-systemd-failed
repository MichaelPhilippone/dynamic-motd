#!/bin/bash
# Failed systemd services

failed=$(systemctl list-units --state=failed --no-pager 2>/dev/null | grep "●" | wc -l)
if [[ $failed -gt 0 ]]; then
    printf "\033[1;31m✗ Failed systemd services:\033[0m\n"
    systemctl list-units --state=failed --no-pager 2>/dev/null | grep "●" | sed 's/^/  /'
fi
